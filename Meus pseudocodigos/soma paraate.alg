algoritmo "semnome"

var
c, s, n, g, pares:inteiro

inicio
s<-0
pares<-0
    escreval("Quer somar quantos números?")
    leia(G)
    para c<-1 ate g faca
    escreva("Digite um número.")
    leia(n)
    se (n%2=0) entao
    pares<-pares+1
    fimse
    s<-s+n
    fimpara
    escreval("A soma desses 5 números é:", s)
    escreval("Já o número de pares é:", pares)


fimalgoritmo
